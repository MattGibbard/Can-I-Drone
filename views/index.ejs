                    "mapbox": { "access_token": 'pk.eyJ1IjoibWF0dGdpYmJhcmQiLCJhIjoiY2l6aGI1aTZrMDAyejJxcW5wNWkyaTBzMSJ9.rO41-WferER-6wt9pomX2A' }
                };
                var map = new Airmap.Map(config, {
                    container: 'map',
